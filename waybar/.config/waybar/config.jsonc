  },
  "hyprland/language": {
    "format": "{}",
    "format-en": "EN",
    "format-es": "ES",
    "keyboard-name": "rdr-crush-80",
    "on-click": "hyprctl switchxkblayout rdr-crush-80 next"
  },
  "clock": {
    "format": "ÔÄó  {:%I:%M %p  %a %d/%m/%y}",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
  }
}
