{
  "layer": "top",
  "position": "top",
  "mod": "dock",
  "exclusive": true,
  "passthrough": false,
  "gtk-layer-shell": true,
  "height": 8,
  "modules-left": [
    "custom/parz",
    "hyprland/workspaces",
    "hyprland/language",
    "tray",
    "mpris"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "wireplumber",
    "network",
    "temperature",
    "cpu",
    "memory",
    "clock"
  ],
  "custom/parz": {
    "on-click": "~/dotfiles/powermenu.sh",
    "format": "ü¶ä parz @ arch "
  },
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "on-click": "activate",
    "format": "{icon}",
    "format-icons": {}
  },
  "tray": {
    "icon-size": 20,
    "spacing": 10
  },
  "hyprland/window": {
    "format": "{}",
    "icon": true,
    "max-length": 40
  },
  "mpris": {
    "format": "{player_icon}{status_icon} {title} - {artist}",
    "tooltip-format": "{dynamic}",
    "max-length": 40,
    "player-icons": {
      "chromium": "Ôâ® ",
      "spotify": "ÔÜº "
    },
    "status-icons": {
      "paused": "‚è∏"
    }
  },
  "wireplumber": {
    "format": "{volume}% {icon}",
    "format-muted": "ÔÄ¶",
    "on-click": "pavucontrol",
    "format-icons": [
      "ÔÄ¶",
      "ÔÄß ",
      "ÔÄ® "
    ]
  },
  "network": {
    "format": "{bandwidthUpBytes}ÔÅ¢ {bandwidthUpBytes}ÔÅ£ Û∞àÄ",
    "format-disconnected": "Û±ñ£", //An empty format will hide the module.
    "tooltip-format": "{ifname} via {gwaddr} Û∞äó",
    "max-length": 50,
    "interval": 1
  },
  "temperature": {
    "thermal-zone": 0,
    "hwmon-path": "/sys/class/hwmon/hwmon6/temp3_input",
    "format-critical": "{temperatureC}¬∞C Ôãá",
    "critical-threshold": 80,
    "interval": 1,
    "format": "{temperatureC}¬∞C Ôãâ"
  },
  "cpu": {
    "interval": 1,
    "format": "{usage}% Ôãõ",
